@page
@model ProductApp.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProductDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Type" class="control-label"></label>
                <input asp-for="Product.Type" class="form-control" />
                <span asp-validation-for="Product.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.AmountInStock" class="control-label"></label>
                <input asp-for="Product.AmountInStock" class="form-control" />
                <span asp-validation-for="Product.AmountInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Distributor" class="control-label"></label>
                <input asp-for="Product.Distributor" class="form-control" />
                <span asp-validation-for="Product.Distributor" class="text-danger"></span>
            </div>

            @if (User.IsInRole("admin"))
            {
                <div class="form-group">
                    <label asp-for="Product.Creator" class="control-label"></label>
                    <select asp-for="Product.Creator" asp-items="Model.Creators"></select>
                    <span asp-validation-for="Product.Creator" class="text-danger"></span>
                </div>
            }
            else{
                <div>
					Cretor: @Model.Product.Creator
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
